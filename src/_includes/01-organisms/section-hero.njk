{% macro renderSectionHero(options) %}
  {# Check if data is provided #}
  {% if options.datas %}
    {# Find variant without using selectattr #}
    {% set variant = null %}
    {% for hero in options.datas.heroes %}
      {% if hero.name == options.name %}
        {% set variant = hero %}
      {% endif %}
    {% endfor %}
    
    {# Fallback to first hero if not found #}
    {% if variant == null %}
      {% set variant = options.datas.heroes[0] %}
    {% endif %}

    {# Get global styling and variants #}
    {% set globalStyle = options.datas.globalStyle %}
    {% set variantStyle = options.datas.variants[variant.variant] | default(options.datas.variants.default) %}
    {% set containerStyle = options.datas.containerStyle %}
    {% set contentLayoutStyle = options.datas.contentLayoutStyle %}
    {% set textContainerStyle = options.datas.textContainerStyle %}
    {% set buttonsContainerStyle = options.datas.buttonsContainerStyle ~ " flex-row justify-center md:justify-start" %}
    {% set imageContainerStyle = options.datas.imageContainerStyle ~ " flex justify-center md:justify-start" %}

    {# Create unique ID for the section from name #}
    {% set sectionId = "section-" ~ (variant.name | replace(" ", "-") | lower) %}

    {# Specific styles for scroll button #}
    {% set scrollArrowWrapperStyle = "absolute left-1/2 transform -translate-x-1/2 z-20" %}
    {% set arrowStyle = "mx-auto" %}
    {% set arrowButtonStyle = "text-[theme(--ma-nautic-blue)]" %}
    {% set arrowContainerSize = "w-16 h-16" %}

    {# Specific to boat, location and contact pages - structure with beige band and waves #}
    {% if variant.name == "bateaux_hero" or variant.name == "lieux_hero" or variant.name == "contact_hero" or variant.name == "faq_hero" or variant.name == "legal_hero" %}
      {# Top beige band for main title #}
      <div class="bg-[theme(--ma-nautic-beige)] pt-16 md:pt-20 lg:pt-24 pb-12 w-full">
        <div class="{{ containerStyle }}">
          {# MainTitle #}
          {% if variant.mainTitle and options.headings %}
            {% set mainTitle = null %}
            {% for heading in options.headings.headings %}
              {% if heading.name == variant.mainTitle %}
                {% set mainTitle = heading %}
              {% endif %}
            {% endfor %}

            {% if mainTitle %}
              <{{ "h" + mainTitle.level }} class="text-center {{ options.headings.globalStyle }} {{ options.headings.variants[mainTitle.style] }} max-w-[40rem] mx-auto">
                {{ mainTitle.text }}
              </{{ "h" + mainTitle.level }}>
            {% endif %}
          {% endif %}
        </div>
      </div>

      {# Main section with waves and content #}
      <section class="{{ globalStyle | replace('py-12', 'pt-12 pb-0') }} {{ variantStyle }} {{ options.class | default('') }} relative overflow-visible pt-0" id="{{ sectionId }}">
        {# Left wave with conditional transparency - only if hasWaves is not false #}
        {% if variant.hasWaves != false and variant["image-left"] and options.images %}
          <div class="absolute left-0 top-1/2 transform -translate-y-1/2 hidden md:block z-20 pointer-events-none">
            {% set leftWave = null %}
            {% for image in options.images.images %}
              {% if image.name == variant["image-left"] %}
                {% set leftWave = image %}
              {% endif %}
            {% endfor %}

            {% if leftWave %}
              {# Use size variant defined in images.json #}
              {% set imageVariantLeft = options.images.variants[leftWave.size] | default('w-auto h-auto') %}
              <img src="{{ leftWave.src }}" alt="{{ leftWave.alt }}" class="{{ options.images.globalStyle }} {{ imageVariantLeft }} max-w-none wave-image">
            {% endif %}
          </div>
        {% endif %}

        {# Right wave with conditional transparency - only if hasWaves is not false #}
        {% if variant.hasWaves != false and variant["image-right"] and options.images %}
          <div class="absolute right-0 top-1/2 transform -translate-y-1/2 hidden md:block z-20 pointer-events-none">
            {% set rightWave = null %}
            {% for image in options.images.images %}
              {% if image.name == variant["image-right"] %}
                {% set rightWave = image %}
              {% endif %}
            {% endfor %}

            {% if rightWave %}
              {# Use size variant defined in images.json #}
              {% set imageVariantRight = options.images.variants[rightWave.size] | default('w-auto h-auto') %}
              <img src="{{ rightWave.src }}" alt="{{ rightWave.alt }}" class="{{ options.images.globalStyle }} {{ imageVariantRight }} max-w-none wave-image">
            {% endif %}
          </div>
        {% endif %}
        
        {# White background for main content #}
        <div class="bg-white pt-4 md:pt-6 relative z-10">
          <div class="{{ containerStyle }} relative z-10">
            <div class="flex flex-col items-center">
              {# SuperHeading #}
              {% if variant.superHeading and options.headings %}
                {% set mainSuperHeading = null %}
                {% for heading in options.headings.headings %}
                  {% if heading.name == variant.superHeading %}
                    {% set mainSuperHeading = heading %}
                  {% endif %}
                {% endfor %}

                {% if mainSuperHeading %}
                  <{{ "h" + mainSuperHeading.level }} class="text-center mb-6 {{ options.headings.globalStyle }} {{ options.headings.variants[mainSuperHeading.style] }} max-w-[40rem] mx-auto">
                    {{ mainSuperHeading.text }}
                  </{{ "h" + mainSuperHeading.level }}>
                {% endif %}
              {% endif %}

              {# Icon if present - Using data-svg-src for JS loading #}
              {% if variant.hasIcon and variant.iconName and options.icons %}
                <div class="flex justify-center my-0 mb-6">
                  {% set iconData = null %}
                  {% for icon in options.icons.icons %}
                    {% if icon.name == variant.iconName %}
                      {% set iconData = icon %}
                    {% endif %}
                  {% endfor %}

                  {% if iconData %}
                    <span data-svg-src="{{ iconData.path }}" data-svg-width="32" data-svg-height="32" class="inline-flex items-center justify-center w-12 h-12 text-[theme(--ma-nautic-teal)]">
                      <!-- SVG will be loaded here -->
                    </span>
                  {% else %}
                    <span class="inline-flex items-center justify-center w-12 h-12 text-[theme(--ma-nautic-teal)]">
                      <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="32" height="32" fill="currentColor"><circle cx="12" cy="12" r="10"/></svg>
                    </span>
                  {% endif %}
                </div>
              {% endif %}

              {# Content or ContentBlocks depending on variant #}
              {% if variant.name == "contact_hero" and variant.contentBlocks %}
                <div id="contact-form" class="text-center max-w-[40rem] mx-auto text-[theme(--ma-nautic-blue)] space-y-4">
                  {% for block in variant.contentBlocks %}
                    <p class="mb-4">{{ block.text | safe }}</p>
                  {% endfor %}
                </div>
              {% elseif variant.content %}
                <div class="text-center max-w-[40rem] mx-auto">
                  {{ variant.content | safe }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </section>

      {# Scroll button between sections #}
      {% if variant.scrollArrowButton and options.buttons %}
        {% set scrollButton = null %}
        {% for button in options.buttons.buttons %}
          {% if button.name == variant.scrollArrowButton %}
            {% set scrollButton = button %}
          {% endif %}
        {% endfor %}

        {% if scrollButton %}
          <div class="w-full bg-white relative h-8 -mt-1">
            {% set scrollTarget = "" %}
            {% if variant.name == "bateaux_hero" %}
              {% set scrollTarget = "#boat-list" %}
            {% elif variant.name == "lieux_hero" %}
              {% set scrollTarget = "#spot-list" %}
            {% elif variant.name == "contact_hero" %}
              {% set scrollTarget = "#contact-form" %}
            {% endif %}
            
            <a href="{{ scrollTarget }}" class="ma-nautic-scroll-arrow {{ arrowStyle }} {{ scrollArrowWrapperStyle }}" aria-label="D√©filer vers le contenu">
              {% if scrollButton.icon and options.icons %}
                {% set arrowIconData = null %}
                {% for icon in options.icons.icons %}
                  {% if icon.name == scrollButton.icon %}
                    {% set arrowIconData = icon %}
                  {% endif %}
                {% endfor %}

                {% if arrowIconData %}
                  <span data-svg-src="{{ arrowIconData.path }}" data-svg-width="32" data-svg-height="32" class="inline-flex items-center justify-center {{ arrowContainerSize }} {{ arrowButtonStyle }}">
                    <!-- SVG will be loaded here -->
                  </span>
                {% else %}
                  <span class="inline-flex items-center justify-center {{ arrowContainerSize }} {{ arrowButtonStyle }}">‚Üì</span>
                {% endif %}
              {% else %}
                <span class="inline-flex items-center justify-center {{ arrowContainerSize }} {{ arrowButtonStyle }}">‚Üì</span>
              {% endif %}
            </a>
          </div>
        {% endif %}
      {% endif %}

    {# Standard Hero section for other variants #}
    {% else %}
      <section class="{{ globalStyle }} {{ variantStyle }} {{ options.class | default('') }}" id="{{ sectionId }}">
        <div class="{{ containerStyle }}">
          <div class="{{ contentLayoutStyle.mobile }} {{ contentLayoutStyle.desktop }}">
            {# Text Content Column #}
            <div class="{{ textContainerStyle }}">
              {# MainTitle #}
              {% if variant.mainTitle and options.headings %}
                {% set mainTitle = null %}
                {% for heading in options.headings.headings %}
                  {% if heading.name == variant.mainTitle %}
                    {% set mainTitle = heading %}
                  {% endif %}
                {% endfor %}

                {% if mainTitle %}
                  <{{ "h" + mainTitle.level }} class="{{ options.headings.globalStyle }} {{ options.headings.sizeStyles["h" + mainTitle.level] }} {{ options.headings.variants[mainTitle.style] }} max-w-[40rem] mx-auto text-center">
                    {{ mainTitle.text }}
                  </{{ "h" + mainTitle.level }}>
                {% endif %}
              {% endif %}

              {# SuperHeading #}
              {% if variant.superHeading and options.headings %}
                {% set mainSuperHeading = null %}
                {% for heading in options.headings.headings %}
                  {% if heading.name == variant.superHeading %}
                    {% set mainSuperHeading = heading %}
                  {% endif %}
                {% endfor %}

                {% if mainSuperHeading %}
                  <{{ "h" + mainSuperHeading.level }} class="{{ options.headings.globalStyle }} {{ options.headings.sizeStyles["h" + mainSuperHeading.level] }} {{ options.headings.variants[mainSuperHeading.style] }} max-w-[40rem] mx-auto text-center">
                    {{ mainSuperHeading.text }}
                  </{{ "h" + mainSuperHeading.level }}>
                {% else %}
                  <h2 class="{{ options.headings.globalStyle }} {{ options.headings.sizeStyles.h2 }} {{ options.headings.variants.default }} max-w-[40rem] mx-auto text-center">
                    {{ variant.superHeading }}
                  </h2>
                {% endif %}
              {% endif %}

              {# Content #}
              {% if variant.content %}
                <p class="{{ variant.contentStyle }} max-w-[40rem] mx-auto text-center">
                  {{ variant.content }}
                </p>
              {% endif %}

              {# Buttons Container #}
              <div class="{{ buttonsContainerStyle }}">
                {# Import button rendering macro #}
                {% from "03-atoms/button.njk" import renderButton %}

                {# Primary Button #}
                {% if variant.primaryButton %}
                  {{ renderButton({ 
                      name: variant.primaryButton,
                      datas: options.buttons
                  }) }}
                {% endif %}

                {# Secondary Button #}
                {% if variant.secondaryButton %}
                  {{ renderButton({ 
                      name: variant.secondaryButton,
                      datas: options.buttons
                  }) }}
                {% endif %}
              </div>
            </div>

            {# Image Column #}
            <div class="{{ imageContainerStyle }}">
              {% if variant.image and options.images %}
                {% set heroImage = null %}
                {% for image in options.images.images %}
                  {% if image.name == variant.image %}
                    {% set heroImage = image %}
                  {% endif %}
                {% endfor %}

                {% if heroImage %}
                  {% set imageVariant = options.images.variants[heroImage.size] %}
                  <img src="{{ heroImage.src }}" alt="{{ heroImage.alt }}" class="{{ options.images.globalStyle }} {{ imageVariant }}">
                {% endif %}
              {% endif %}
            </div>
          </div>
        </div>
      </section>
    {% endif %}
  {% else %}
    <span class="text-red-500">Section Hero data not found</span>
  {% endif %}
  {# Include script for scrolling #}
<script src="/js/organisms/section-scroll.js"></script>
{% endmacro %}

